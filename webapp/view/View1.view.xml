        <App id="app">
            <pages>
                <Page id="page" title="Resource Model and JSON Model">
                    <content>
                        <k:VerticalLayout>
                            <k:HorizontalLayout>
                                <Label text="{RES>empno}" width="220px" design="Bold" />
                                <Label text="{JSN>/empno}" design="Bold" />
                            </k:HorizontalLayout>
                            <k:HorizontalLayout>
                                <Label text="{RES>ename}" width="220px" design="Bold" />
                                <Label text="{JSN>/ename}" design="Bold" />
                            </k:HorizontalLayout>
                            <k:HorizontalLayout>
                                <Label text="{RES>desig}" width="220px" design="Bold" />
                                <Label text="{JSN>/empdesig}" design="Bold" />
